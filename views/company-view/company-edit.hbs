<div class="h2-stylings">
  <h2>Edit your Company</h2>
</div>

<div class="form-group ">
  <form action="/companies/edit?company_id={{company._id}}" method="POST" enctype="multipart/form-data">
    <label>Company Name:</label>
    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="name"
      value="{{company.name}}">
    <br>
    <label for="">Company NIF:</label>
    <input type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="companyNif"
      value="{{company.companyNif}}">
    <br>
    <label for="">Address:</label>
    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="address"
      value="{{company.address}}">
    <br>
    <label for="">Type of Services:</label>
    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="typeOfServices"
      value="{{company.typeOfServices}}">
    <br>
    <label for="">Years of Activity</label>
    <input type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
      name="yearsOfactivity" value="{{company.yearsOfactivity}}">
    <br>
    <label>Company Logo</label>
    <br>
    <input type="file" name="photo">
    <br>
    <input class="button" type="submit" value="Edit">
  </form>
</div>