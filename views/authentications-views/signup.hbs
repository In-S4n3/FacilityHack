<body id="login_signup">
  
<!-- CONTENT ================================================== -->
    <section class="section-border border-primary">
      <div class="container d-flex flex-column">
        <div class="row align-items-center justify-content-center no-gutters min-vh-100">
          <div class="col-8 col-md-6 col-lg-7 offset-md-1 order-md-2 mt-auto mt-md-0 pt-8 pb-4 py-md-11">

            <!-- Image -->
            <img src="images/undraw_security_o890.svg" class="img-fluid mw-md-150 mw-lg-130 mb-6 mb-md-0" alt="..." data-aos="fade-up" data-aos-delay="100">

          </div>
          <div class="col-12 col-md-5 col-lg-4 order-md-1 mb-auto mb-md-0 pb-8 py-md-11">
            
            <!-- Heading -->
            <h1 class="mb-0 font-weight-bold text-center">
              Sign up
            </h1>

            <!-- Text -->
            <p class="mb-6 text-center text-muted">
              And start engaging with your building.
            </p>

<!-- Form -->
<form id="form" action="/signup" method="POST" class="mb-6">
  <div class="row">
    <div class="col">
      <input type="text" class="form-control" name="firstName" placeholder="First name">
    </div>
    <div class="col">
      <input type="text" class="form-control" name="lastName" placeholder="Last name">
    </div>
    <br>
  </div>
  <br>
  <input type="text" class="form-control" name="username" placeholder="Your Username">
  <br>
  <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email"
    placeholder="Email">
  <br>

  <input type="password" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="password"
    placeholder="********">
  <br>

  <input type="password" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="password2"
    placeholder="********">



  {{#if errorMessage}}
  <br>
  <div class="error-message text-danger">{{ errorMessage }}</div>
  {{/if}}
  <br>

  <!-- Submit -->
  <button class="button btn btn-block btn-primary mb-12" type="submit">Create Account</button>
</form>


<!-- Text -->
<p class="mb-0 font-size-sm text-center text-muted">
  Already a member? <a href="/login">Login</a> instead.
</p>

<br>

<div class="alert alert-primary alert-dismissible fade show" role="alert">
              <strong>Are you a Professional?</strong> <br>
              <a href="/professional-login">Login</a> here, or <a
              href="/professional-signup">Sign-up</a> here..
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>

          </div>
        </div> <!-- / .row -->
      </div> <!-- / .container -->
    </section>


</body>