<h1>Edit a Building</h1>

<form action="/buildings/edit?building_id={{building._id}}" method="POST">
  <label for="">Name:</label>
  <input type="text" name="name" value="{{building.name}}">
  <br>
  <label for="">Building NIF:</label>
  <input type="number" name="buildingNif" value="{{building.buildingNif}}">
  <br>
  <label for="">Address:</label>
  <input type="text" name="address" value="{{building.address}}">
  <br>
  <label for="">Builder</label>
  <input type="text" name="builder" value="{{building.builder}}">
  <br>
  <label for="">Number of Floors</label>
  <input type="number" name="floors" value="{{building.floors}}">
  <br>
  <label for="">Number of Apartements</label>
  <input type="number" name="numOfApartments" value="{{building.numOfApartments}}">
  <br>
  <label for="">Year of Construction</label>
  <input type="date" name="yearOfConstruction" value="{{building.yearOfConstruction}}">
  <br>
  <label for="">Number of Elevators</label>
  <input type="number" name="numOfElevators" value="{{building.numOfElevators}}">
  <br>
  <button type="submit">Edit</button>
</form>